<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.drake.brv.PageRefreshLayout
      android:id="@+id/page_refresh_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:empty_layout="@layout/dynamic_layout_empty">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

  </com.drake.brv.PageRefreshLayout>

    <ImageView
        android:id="@+id/iv_go_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dynamic_icon_go_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="106dp"
        android:layout_marginEnd="12dp"/>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dynamic_icon_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_go_top"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>