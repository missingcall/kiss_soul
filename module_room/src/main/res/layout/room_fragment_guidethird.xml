<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent">

        <TextView
            android:id="@+id/tv_guide_jump"
            style="@style/DJSTextView"
            android:layout_marginTop="75.5dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/room_guide_round_button"
            android:drawableRight="@mipmap/room_icon_guide_arrow_right"
            android:drawablePadding="2dp"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="14.5dp"
            android:paddingRight="8.5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50.5dp"
            android:layout_marginTop="37dp"
            android:src="@mipmap/room_icon_guide_arrow6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_next"
            />

       <TextView
           android:id="@+id/tv_next"
           style="@style/DJSTextView"
           android:layout_marginEnd="23dp"
           android:layout_marginBottom="86dp"
           android:background="@drawable/room_guide_round_button1"
           android:drawablePadding="2dp"
           android:paddingBottom="9.5dp"
           android:paddingLeft="48dp"
           android:paddingRight="48dp"
           android:paddingTop="9.5dp"
           android:text="知道了"
           android:textColor="@color/white"
           android:textSize="14sp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/cl_1"
           app:drawableEndCompat="@mipmap/room_icon_guide_arrow_right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/room_icon_guide2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toTopOf="@+id/tv_next"
            android:layout_marginTop="19.5dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="86dp"
            android:background="@mipmap/room_icon_guide_pop3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv1">

            <TextView
                style="@style/DJSTextView"
                android:text="想要获取主播好感，请点击这里"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawablePadding="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="13.5dp"
                android:paddingBottom="20.5dp"
                app:drawableLeftCompat="@mipmap/room_icon_guide1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="162.5dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/room_icon_guide_gift"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>