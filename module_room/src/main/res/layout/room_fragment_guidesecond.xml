<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent">

        <TextView
            android:id="@+id/tv_guide_jump"
            style="@style/DJSTextView"
            android:layout_marginTop="75.5dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/room_guide_round_button"
            android:drawableRight="@mipmap/room_icon_guide_arrow_right"
            android:drawablePadding="2dp"
            android:paddingLeft="14.5dp"
            android:paddingTop="9dp"
            android:paddingRight="8.5dp"
            android:paddingBottom="9dp"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="67.5dp"
            android:src="@mipmap/room_icon_guide_arrow5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_next" />

        <TextView
            android:id="@+id/tv_next"
            style="@style/DJSTextView"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="228.5dp"
            android:background="@drawable/room_guide_round_button1"
            android:drawablePadding="2dp"
            android:paddingLeft="48dp"
            android:paddingTop="9.5dp"
            android:paddingRight="48dp"
            android:paddingBottom="9.5dp"
            android:text="知道了"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableEndCompat="@mipmap/room_icon_guide_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.5dp"
            android:layout_marginRight="80dp"
            android:src="@mipmap/room_icon_guide2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_next" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49.5dp"
            android:layout_marginBottom="14.5dp"
            android:background="@mipmap/room_icon_guide_pop3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cl_2">

            <TextView
                style="@style/DJSTextView"
                android:drawablePadding="3dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingRight="12dp"
                android:paddingBottom="18dp"
                android:text="想要聊聊，请点击这里"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:drawableLeftCompat="@mipmap/room_icon_guide1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50.5dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/room_guide_round_button2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_1"
                style="@style/DJSTextView"
                android:drawablePadding="3dp"
                android:paddingLeft="12dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="聊聊吧"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_smile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/tv_1"
                android:layout_marginStart="23.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/room_icon_guide_chat"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>