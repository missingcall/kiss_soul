<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flt_gift"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <com.kissspace.common.widget.EasyPagView
        android:id="@+id/background_pag"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.xiaweizi.marquee.MarqueeTextView
        android:id="@+id/tv_gift_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:scroll_interval="5000"
        app:scroll_mode="mode_forever" />

    <ImageView
        android:id="@+id/image_gift"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginEnd="27dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_gift_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_gift_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
