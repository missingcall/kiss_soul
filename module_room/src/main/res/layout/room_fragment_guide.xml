<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent">

        <TextView
            android:id="@+id/tv_guide_jump"
            style="@style/DJSTextView"
            android:layout_marginTop="75.5dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/room_guide_round_button"
            android:drawableRight="@mipmap/room_icon_guide_arrow_right"
            android:drawablePadding="2dp"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="14.5dp"
            android:paddingRight="8.5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.5dp"
            android:layout_marginTop="312dp"
            android:src="@mipmap/room_icon_guide_arrow1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.5dp"
            android:layout_marginTop="5.5dp"
            android:background="@mipmap/room_icon_guide_pop1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv1">

            <TextView
                style="@style/DJSTextView"
                android:text="右滑查看房间用户"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawablePadding="3dp"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:paddingTop="18dp"
                android:paddingBottom="10dp"
                app:drawableLeftCompat="@mipmap/room_icon_guide1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.5dp"
            android:layout_marginTop="428.5dp"
            android:src="@mipmap/room_icon_guide_arrow2"
            app:layout_constraintLeft_toRightOf="@+id/cl_1"
            app:layout_constraintTop_toTopOf="parent"
            />

       <TextView
           android:id="@+id/tv_next"
           style="@style/DJSTextView"
           android:layout_marginTop="21.5dp"
           android:layout_marginEnd="23dp"
           android:background="@drawable/room_guide_round_button1"
           android:drawablePadding="2dp"
           android:paddingBottom="9.5dp"
           android:paddingLeft="48dp"
           android:paddingRight="48dp"
           android:paddingTop="9.5dp"
           android:text="下一步"
           android:textColor="@color/white"
           android:textSize="14sp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/iv2"
           app:drawableEndCompat="@mipmap/room_icon_guide_arrow_right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/room_icon_guide2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toTopOf="@+id/tv_next"
            android:layout_marginTop="19.5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>