<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.kissspace.common.model.RoomListBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@mipmap/app_bg_party_page_list"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <FrameLayout
            android:id="@+id/flt_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/app_bg_party_avatar"
                />

            <ImageView
                android:id="@+id/iv_avatar"
                imageRadius="@{68f}"
                imageUrl="@{m.roomIcon}"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/flt_avatar"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                isShowBeautyId="@{m.roomBeautifulId}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@mipmap/app_icon_beauty_id" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{m.roomTitle}"
                android:textColor="@color/common_white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@id/layout_title"
            app:layout_constraintTop_toBottomOf="@id/layout_title">

            <ImageView
                android:id="@+id/iv_room_type"
                loadImage="@{m.roomTagUrl}"
                android:layout_width="172dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="24dp"
                android:singleLine="true"
                android:text="@{m.roomAffiche}"
                android:textColor="@color/common_white"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_room_type"
                app:layout_constraintEnd_toEndOf="@id/iv_room_type"
                app:layout_constraintStart_toStartOf="@id/iv_room_type"
                app:layout_constraintTop_toTopOf="@id/iv_room_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/flt_avatar">

            <LinearLayout
                android:id="@+id/layout_host"
                roomListHostVisible="@{m}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/app_bg_party_list_user_avatar"
                        android:layout_gravity="center"/>

                    <ImageView
                        roomListHostImage="@{m}"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llt_members"
                roomListMicMembers="@{m}"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/layout_host"
                app:layout_constraintStart_toEndOf="@id/layout_host"
                app:layout_constraintTop_toTopOf="@id/layout_host" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_lock"
            isShowLock="@{m.roomPwd}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/layout_title"
            app:layout_constraintBottom_toBottomOf="@id/layout_title"
            android:src="@mipmap/app_icon_party_list_lock"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            roomHeat="@{m.chatRoomHeat}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/app_icon_room_heat"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:textColor="@color/color_949499"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_users"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_users" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>