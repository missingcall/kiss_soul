<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/wrapper"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        app:bl_corners_radius="56dp"
        app:bl_stroke_color="@color/color_6C74FB"
        app:bl_stroke_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center" />
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="-8dp"
        android:layout_marginBottom="-10dp"
        android:src="@mipmap/icon_room_float_close"
        app:layout_constraintBottom_toTopOf="@id/wrapper"
        app:layout_constraintStart_toEndOf="@id/wrapper" />

</androidx.constraintlayout.widget.ConstraintLayout>