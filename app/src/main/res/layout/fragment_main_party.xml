<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="m"
            type="com.kissspace.android.viewmodel.PartyViewModel" />
    </data>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:background="@mipmap/app_bg_party_search_layout_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/iv_first_recharge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawableStart="@mipmap/icon_home_search"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/white40"
                android:textSize="13sp"
                android:text="搜索昵称/ID/房间名"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_my_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:src="@mipmap/icon_home_my_room"
            app:layout_constraintBottom_toBottomOf="@id/layout_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_search" />

        <ImageView
            android:id="@+id/iv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:src="@mipmap/icon_home_ranking"
            app:layout_constraintEnd_toStartOf="@id/iv_my_room"
            app:layout_constraintTop_toTopOf="@id/iv_my_room" />

        <ImageView
            android:id="@+id/iv_first_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            goneUnless="@{m.isShowFirstRecharge()}"
            android:src="@mipmap/icon_home_first_recharge"
            app:layout_constraintEnd_toStartOf="@id/iv_ranking"
            app:layout_constraintTop_toTopOf="@id/layout_search"
            app:layout_constraintBottom_toBottomOf="@id/layout_search"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:overScrollMode="never"
                app:elevation="0dp">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_collapseMode="pin"
                   android:paddingStart="16dp"
                   android:paddingEnd="16dp"
                   app:layout_scrollFlags="scroll|exitUntilCollapsed">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/con_room_one"
                       android:layout_width="0dp"
                       android:layout_height="168dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@id/con_room_right"
                       android:layout_marginEnd="4dp"
                       >

                       <ImageView
                           android:id="@+id/iv_room_bg_one"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@mipmap/app_party_top_room_one_bg"
                           android:scaleType="fitXY"
                           />


                       <TextView
                           android:id="@+id/tv_room_title_des_one"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="8dp"
                           android:layout_marginBottom="8dp"
                           android:textColor="@color/white50"
                           android:textSize="13sp"
                           android:text="寻找兴趣相同的人"
                           />

                       <TextView
                           android:id="@+id/tv_room_title_one"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintBottom_toTopOf="@id/tv_room_title_des_one"
                           app:layout_constraintStart_toStartOf="parent"
                           android:textSize="15sp"
                           android:layout_marginStart="8dp"
                           android:textColor="@color/white"
                           android:text="扩列交友"
                           />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/con_room_right"
                       android:layout_width="0dp"
                       android:layout_height="168dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toEndOf="@id/con_room_one"
                       android:layout_marginStart="4dp">


                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:id="@+id/con_room_two"
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_marginBottom="4dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintBottom_toTopOf="@id/con_room_three"
                           >

                           <ImageView
                               android:id="@+id/iv_room_bg_two"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@mipmap/app_party_top_room_two_bg"
                               android:scaleType="fitXY"
                               />


                           <TextView
                               android:id="@+id/tv_room_title_des_two"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               android:textColor="@color/white70"
                               android:textSize="11sp"
                               android:layout_marginStart="8dp"
                               android:layout_marginBottom="8dp"
                               android:text="海量歌手在线演唱"
                               />

                           <TextView
                               android:id="@+id/tv_room_title_two"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="14sp"
                               android:textColor="@color/white"
                               android:layout_marginStart="8dp"
                               android:text="声临其境"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintBottom_toTopOf="@id/tv_room_title_des_two"/>


                       </androidx.constraintlayout.widget.ConstraintLayout>

                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:id="@+id/con_room_three"
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_marginTop="4dp"
                           app:layout_constraintTop_toBottomOf="@id/con_room_two"
                           app:layout_constraintBottom_toBottomOf="parent">

                           <ImageView
                               android:id="@+id/iv_room_bg_three"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@mipmap/app_party_top_room_three_bg"
                               android:scaleType="fitXY"
                               />


                           <TextView
                               android:id="@+id/tv_room_title_des_three"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               android:textColor="@color/white70"
                               android:textSize="11sp"
                               android:layout_marginStart="8dp"
                               android:layout_marginBottom="8dp"
                               android:text="当缘分来敲门"
                               />

                           <TextView
                               android:id="@+id/tv_room_title_three"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="14sp"
                               android:textColor="@color/white"
                               android:text="心动信号"
                               android:layout_marginStart="8dp"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintBottom_toTopOf="@id/tv_room_title_des_three"/>
                       </androidx.constraintlayout.widget.ConstraintLayout>


                   </androidx.constraintlayout.widget.ConstraintLayout>


                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/con_room_four"
                       android:layout_width="0dp"
                       android:layout_height="80dp"
                       android:layout_marginEnd="4dp"
                       android:layout_marginTop="8dp"
                       app:layout_constraintTop_toBottomOf="@id/con_room_one"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@id/con_room_rank">

                       <ImageView
                           android:id="@+id/iv_room_bg_four"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@mipmap/app_party_top_room_four_bg"
                           android:scaleType="fitXY"
                           />


                       <TextView
                           android:id="@+id/tv_room_title_des_four"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="8dp"
                           android:layout_marginBottom="8dp"
                           android:textColor="@color/white50"
                           android:textSize="13sp"
                           android:text="让心灵来此旅行"
                           />

                       <TextView
                           android:id="@+id/tv_room_title_four"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="8dp"
                           app:layout_constraintBottom_toTopOf="@id/tv_room_title_des_four"
                           app:layout_constraintStart_toStartOf="parent"
                           android:textSize="15sp"
                           android:textColor="@color/white"
                           android:text="情感树洞"
                           />

                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/con_room_rank"
                       android:layout_width="0dp"
                       android:layout_height="80dp"
                       android:layout_marginStart="4dp"
                       android:layout_marginTop="8dp"
                       app:layout_constraintTop_toBottomOf="@id/con_room_one"
                       app:layout_constraintStart_toEndOf="@id/con_room_four"
                       app:layout_constraintEnd_toEndOf="parent">

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:src="@mipmap/app_party_top_room_rank_bg"
                          android:scaleType="fitXY"/>
                   </androidx.constraintlayout.widget.ConstraintLayout>


               </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.angcyo.tablayout.DslTabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="8dp"
                    app:tab_deselect_color="@color/white50"
                    app:tab_draw_indicator="true"
                    app:tab_enable_text_bold="true"
                    app:tab_indicator_style="STYLE_BOTTOM"
                    app:tab_indicator_drawable="@drawable/app_party_indicator_drawable"
                    app:tab_indicator_height="3dp"
                    app:tab_indicator_width="20dp"
                    app:tab_orientation="HORIZONTAL"
                    app:tab_select_color="@color/color_FFFD5C"
                    app:tab_text_max_size="20sp"
                    app:tab_text_min_size="15sp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>