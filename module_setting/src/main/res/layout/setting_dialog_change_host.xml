<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="311dp"
    android:layout_height="wrap_content"
    android:paddingBottom="28dp"
    app:bl_corners_radius="12dp"
    app:bl_solid_color="@color/color_FAFAFA">

    <EditText
        android:id="@+id/edit_host"
        android:layout_width="match_parent"
        android:hint="请输入服务器地址"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_313133"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"/>


    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/common_negative"
        android:textColor="@color/color_6C74FB"
        android:textSize="16sp"
        app:bl_corners_radius="24dp"
        app:bl_solid_color="@color/color_FAFAFA"
        app:bl_stroke_color="@color/color_6C74FB"
        app:bl_stroke_width="1dp"
        app:layout_constraintEnd_toStartOf="@id/tv_positive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_host" />

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/common_btn"
        android:gravity="center"
        android:text="@string/common_positive"
        android:textColor="@color/common_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_negative"
        app:layout_constraintTop_toTopOf="@id/tv_negative" />

</androidx.constraintlayout.widget.ConstraintLayout>